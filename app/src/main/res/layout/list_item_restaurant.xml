<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:paddingBottom="@dimen/padding_small"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
    android:paddingRight="?android:attr/listPreferredItemPaddingRight"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
    android:paddingTop="@dimen/padding_small"
    >

  <TextView
      android:id="@+id/list_item_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignEnd="@+id/list_item_description"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignRight="@+id/list_item_description"
      android:gravity="start"
      android:textAppearance="?attr/textAppearanceListItem"
      android:textIsSelectable="false"
      android:textStyle="bold"
      tools:text="Very Long Restaurant Title - First Line"
      >
  </TextView>

  <LinearLayout
      android:id="@+id/list_item_rating_container"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_alignParentTop="true"
      android:background="@drawable/rating_container_background"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/padding_small"
      >
    <TextView
        android:id="@+id/list_item_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="false"
        android:textSize="@dimen/rating_value_size"
        android:textStyle="bold"
        tools:text="3.5/100"
        style="@style/TextAppearance.AppCompat.Body2"
        />

    <RatingBar
        android:id="@+id/list_item_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.RatingBar.Small"
        />

    <TextView
        android:id="@+id/list_item_rating_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:textIsSelectable="false"
        tools:text="Głosów 100"
        style="@style/TextAppearance.AppCompat.Small"
        >
    </TextView>
  </LinearLayout>


  <TextView
      android:id="@+id/list_item_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/list_item_title"
      android:layout_toLeftOf="@+id/list_item_rating_container"
      android:layout_toStartOf="@id/list_item_rating_container"
      android:textIsSelectable="false"
      tools:text="Polish, Finger Food, Burger, Desserts"
      style="@style/TextAppearance.AppCompat.Body1"
      />


  <TextView
      android:id="@+id/list_item_price_for_two"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_below="@id/list_item_description"
      android:gravity="end"
      android:textIsSelectable="false"
      tools:text="100zł"
      style="@style/TextAppearance.AppCompat.Small"
      />


</RelativeLayout>