<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rating_container_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_small"
    tools:showIn="@layout/list_item_restaurant"
    >
  <TextView
      android:id="@+id/list_item_rating"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textIsSelectable="false"
      android:textSize="@dimen/rating_value_size"
      android:textStyle="bold"
      tools:text="3.5/100"
      style="@style/TextAppearance.AppCompat.Body2"
      />

  <RatingBar
      android:id="@+id/list_item_rating_bar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/Widget.AppCompat.RatingBar.Small"
      />

  <TextView
      android:id="@+id/list_item_rating_votes"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawablePadding="4dp"
      android:textIsSelectable="false"
      tools:text="Głosów 100"
      style="@style/TextAppearance.AppCompat.Small"
      >
  </TextView>
</LinearLayout>